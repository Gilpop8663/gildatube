mixin video(video)
    div.video-mixin
        a.video-mixin(href=`/videos/${video.id}`)
            div.video-mixin__thumbnail(style=`background-image:url(${video.thumbUrl});background-size:cover;background-position:center;`)
            div.video-mixin__data
                span.video-mixin__title=video.title
                div.video-mixin__meta
                    span Uploaded by #{video.owner.name} · 
                    span #{video.meta.views}회
                   
            